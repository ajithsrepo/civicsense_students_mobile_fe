<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_rounded_leaderboard_winner_left"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="25dp">

                <com.gcc.smartcity.fontui.FontTextView
                    android:id="@+id/layout_winner_leaderboardSecondUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Michael Joe"
                    android:textColor="@color/agentx_text_dark"
                    android:textSize="16sp"
                    custom:fontFace="Lato-Bold.ttf" />

                <com.gcc.smartcity.fontui.FontTextView
                    android:id="@+id/layout_winner_leaderboardSecondUserPointsEarned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textColor="@color/agentx_text_light"
                    android:textSize="16sp"
                    custom:fontFace="Lato-Bold.ttf" />

                <com.gcc.smartcity.fontui.FontTextView
                    android:id="@+id/layout_winner_leaderboardSecondUserRanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_rounded_rank_green"
                    android:ems="4"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="SECOND"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    custom:fontFace="Lato-Bold.ttf" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/agentx_grey_dark" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/layout_winner_leaderboardSecondUserImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_avatar"
            app:civ_border_color="@color/agent_light_blue"
            app:civ_border_width="5dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_rounded_leaderboard_winner_center"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingTop="37dp"
                android:paddingRight="25dp"
                android:paddingBottom="25dp">

                <com.gcc.smartcity.fontui.FontTextView
                    android:id="@+id/layout_winner_leaderboardFirstUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Michael Joe"
                    android:textColor="@color/agentx_text_dark"
                    android:textSize="16sp"
                    custom:fontFace="Lato-Bold.ttf" />

                <com.gcc.smartcity.fontui.FontTextView
                    android:id="@+id/layout_winner_leaderboardFirstUserPointsEarned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textColor="@color/agentx_text_light"
                    android:textSize="16sp"
                    custom:fontFace="Lato-Bold.ttf" />

                <com.gcc.smartcity.fontui.FontTextView
                    android:id="@+id/layout_winner_leaderboardFirstUserRanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_rounded_rank_blue"
                    android:ems="3"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="First"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    custom:fontFace="Lato-Bold.ttf" />
            </LinearLayout>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/layout_winner_leaderboardFirstUserImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_avatar"
            app:civ_border_color="#FFFF"
            app:civ_border_width="2dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_rounded_leaderboard_winner_right"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="25dp">

                <com.gcc.smartcity.fontui.FontTextView
                    android:id="@+id/layout_winner_leaderboardThirdUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Michael Joe"
                    android:textColor="@color/agentx_text_dark"
                    android:textSize="16sp"
                    custom:fontFace="Lato-Bold.ttf" />

                <com.gcc.smartcity.fontui.FontTextView
                    android:id="@+id/layout_winner_leaderboardThirdUserPointsEarned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textColor="@color/agentx_text_light"
                    android:textSize="16sp"
                    custom:fontFace="Lato-Bold.ttf" />

                <com.gcc.smartcity.fontui.FontTextView
                    android:id="@+id/layout_winner_leaderboardThirdUserRanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_rounded_rank_green"
                    android:ems="3"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Third"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    custom:fontFace="Lato-Bold.ttf" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/agentx_grey_dark" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/layout_winner_leaderboardThirdUserImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_avatar"
            app:civ_border_color="@color/agent_light_blue"
            app:civ_border_width="5dp" />

    </FrameLayout>

</LinearLayout>